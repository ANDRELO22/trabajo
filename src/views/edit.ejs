<%- include ('partials/_header'); %>
<div class="container">
    <div class="row">
        <!-- FROM -->
        <div class="col-md-5 offset-md-3">
            <div class="card">
            <div class="card-body">
                <form action="/edit/<%= tasks._id %> " method="post">
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Insert a title" class="form-control" 
                        value="<% tasks.title %>">
                    </div>
                    <div class="form-group">
                        <textarea name="descripcion" cols="80" class="form-control" placeholder="Inserta descripcion"><% tasks.descripcion %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Update
                    </button>
                </form>
            </div>
        </div>
        </div>
        <%- include ('partials/_footer');%>